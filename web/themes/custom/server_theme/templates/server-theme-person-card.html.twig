{%
  set image_classes = [
    'w-25',
    'h-25',
    'rounded-full',
    'mx-auto'
  ]
%}
<div class="flex flex-col rounded-lg border w-full overflow-hidden">

  <a href="{{ url }}">
    <figure class="pt-8">
      <img{{ attributes.addClass(image_classes).setAttribute('src', image['#uri']) }}>
    </figure>
  </a>

  <div class="flex flex-col gap-2 py-6 pb-10 text-center">
      <div class="text-sm leading-5 font-medium text-gray-900">
        <a href="{{ url }}">
          {{ name }}
        </a>
      </div>
      <div class="text-sm leading-5 font-normal text-gray-500">
        {{ title|t }}
      </div>
      <div class="text-xs leading-4 pt-4 font-medium text-green-800">
        <span class="bg-green-100 p-1 px-2 rounded-lg">{{ role|t }}</span>
      </div>
  </div>
  <div class="grid grid-cols-2 divide-x border-t text-center border-t-gray-200 text-sm leading-5 font-medium">
    <div class="py-4">
      <a href="mailto:{{ mail }}">
        <img class="inline-block align-baseline mr-2 h-3 w-4 cursor-pointer" src="/{{ directory }}/src/images/mail-icon.svg" alt="{{ 'Email'|t }}">
        {{ 'Email'|t }}
      </a>
    </div>
    <div class="py-4">
      <a href="tel:{{ phone }}">
        <img class="inline-block align-center mr-2 h-4 w-4 cursor-pointer" src="/{{ directory }}/src/images/phone-icon.svg" alt="{{ 'Call'|t }}">
        {{ 'Call'|t }}
      </a>
    </div>
  </div>
</div>
